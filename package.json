{
  "name": "harwaqt-api",
  "version": "1.0.0",
  "description": "Harwaqt API Backend",
  "main": "src/index.ts",
  "engines": {
    "node": "^18",
    "yarn": "^1.22.19",
    "npm": "^8.6.0"
  },
  "engineStrict": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development ts-node src/index.ts",
    "dev": "cross-env NODE_ENV=development nodemon",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier": "prettier --check src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky install",
    "build": "tsc"
  },
  "keywords": [],
  "authors": [
    "Abdulbari",
    "M babar Waseem",
    "Rajab Raza"
  ],
  "license": "ISC",
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "validator": "^13.9.0",
    "winston": "^3.10.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.1",
    "@types/validator": "^13.7.17",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "tsc": "^2.0.4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn format",
      "yarn lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "_moduleAliases": {
    "@/": "./src"
  }
}
